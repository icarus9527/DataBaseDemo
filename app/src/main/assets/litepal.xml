<?xml version="1.0" encoding="utf-8"?>
<litepal>
    <!--dbname用于指定数据库名 version用于指定数据库版本号 list用于指定所有的映射模型-->
    <dbname value="bookstore"></dbname>
    <version value="1"></version>
    <list>
        <!--这里一定要用完整的类名，有多个模型类都可以这样配置在list里-->
        <mapping class="com.example.icarus.databasedemo.Book"></mapping>
    </list>
</litepal>